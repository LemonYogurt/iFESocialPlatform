extend ../layout

block headerContent
	style.
		/* body css */
		body{
			background:#feca98 url("/images/weiboBg.jpg") no-repeat top center;
		}
		/* 顶部的工具条 */
		.ife_weiboBar{width:100%;height:2px;background:#fa7d3c;}
		/* 导航条 */
		.ife_weiboNav{width:100%;height:48px;background:#fff;}
		/* 中间的用户信息部分 */
		.ife_weiboUserInfo{width:100%;overflow:hidden;}
		.ife_weiboUserInfo .ife_weiboInfoContent{width:900px;margin:16px auto 0;padding-top:48px;}
		.ife_weiboUserInfo .ife_weiboInfoContent .ife_weiboUserAvatar{width:100px;height:100px;margin:0 auto;}
		#J_userAvatar{border:0;border-radius:50px;box-shadow:0 0 10px 2px #e5e5e5;}
		#J_userAvatar:hover{box-shadow:0 0 10px 2px #eb7350;}
		.ife_weiboUserInfo .ife_weiboInfoContent .ife_weiboUsername{
			width:100px;margin:0 auto;
		}
		.ife_weiboUserInfo .ife_weiboInfoContent .ife_weiboUsername h1{font-size:22px;color:#fff;text-align:center;text-shadow: 0 0 4px rgba(0,0,0,0.5);margin-top:6px;}
		.ife_weiboUserInfo .ife_weiboInfoContent .ife_weiboCreateTime{width:200px;margin:0 auto;overflow:hidden;}
		.ife_weiboUserInfo .ife_weiboInfoContent .ife_weiboCreateTime h6{font-size:14px;color:#fff;text-align:center;text-shadow: 0 0 4px rgba(0,0,0,0.5);margin-top:6px;}
		/* 微博内容部分 */
		.ife_weiboContent{width:922px;height:500px;background:#e5e5e5;margin:20px auto 0;}
block content
	.ife_weiboBar
	.ife_weiboNav
	.ife_weiboUserInfo
		.ife_weiboInfoContent
			p.ife_weiboUserAvatar
				a(href="javascript:void(0);")
					img#J_userAvatar(src="/images/defaultAvatar.png",width="100",height="100")
			.ife_weiboUsername
				h1 oCupJS
			.ife_weiboCreateTime
				h6 创建时间：#{createTime}
	.ife_weiboContent
