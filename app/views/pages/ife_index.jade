extend ../layout

block headerContent
	link(rel="stylesheet",href="/css/ife.css")
	link(rel="stylesheet",href="/css/ife_textarea.css")
	style.
		.ife_wrap{
			width:1000px;
			min-height:680px;
			margin:50px auto 0;
			padding:16px 0 0 0;
			font-size:0;
			background-color:rgba(96,50,49,0.25);
		}
		.ife_wrap .ife_leftNav{
			width:150px;
			min-height:680px;
			display:inline-block;
			background-color:rgba(199,255,236,0.25);
		}
		.ife_wrap .ife_rightBody{
			width:850px;
			min-height:680px;
			display:inline-block;
			background-color:rgba(195,190,212,0.25);
		}
		.ife_wrap .ife_rightBody .ife_rightMain{
			width:600px;
			min-height:680px;
			margin-right:10px;
			display:inline-block;
			background-color:rgba(0,255,128,0.25);
			vertical-align:top;
		}
		.ife_wrap .ife_rightBody .ife_sideMain{
			width:230px;
			min-height:680px;
			margin-right:10px;
			position:relative;
			display:inline-block;
			background-color:rgba(233,240,29,0.25);
		}
		.ife_fileUploadTooltip{
			width:284px;
			height:173px;
			position:absolute;
			left:92px;
			top:142px;
			box-shadow: 1px 2px 6px 0px #000;
			display:none;
		}
		.ife_fileUploadTooltip .panel{
			width:284px;
			height:173px;
			border-radius:0;
		}
		.ife_fileUploadTooltip .panel-heading{
			background:#fff !important;
			border-color:#fff;
		}
		.ife_fileUploadTooltip .panel-heading .panel-title{
			font-size:14px;
			font-weight:700;
		}
		.ife_fileUploadTooltip .panel-heading a{
			color:#696e78;
			font-size:18px;
			display: inline-block;
			text-decoration:none;
		}
		.ife_fileUploadControl{
			margin-top:-20px;
		}
		.ife_fileUploadControl p{
			padding-left:10px;
		}
		.ife_fileUploadControl a{
			color:#fff;
			background: #ff8140;
			border: 1px solid #f77c3d;
			padding: 0 10px;
			white-space: nowrap;
			display: inline-block;
			border-radius: 2px;
			height: 24px;
			line-height: 23px;
			font-size: 12px;
			min-width: 40px;
			text-align: center;
			outline: none;
			text-decoration:none;
		}
		.ife_fileUploadControl a:hover{
			background:#f7671d;
			border:1px solid #f06923;
			box-shadow: 0px 1px 2px rgba(0,0,0,0.25);
		}
		.ife_fileUploadPic{
			width:80px;
			height:80px;
			background:#e5e5e5;
			overflow:hidden;
			position: relative;
		}
		.ife_fileUploadPic img{
			max-width:80px;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
		}
block content
	// 导航部分
	include ./ife_nav
	.ife_wrap
		.ife_leftNav
		.ife_rightBody
			.ife_rightMain
				include ./ife_textarea
			.ife_sideMain

block footerContent
	script(src="/js/ife_textarea.js")