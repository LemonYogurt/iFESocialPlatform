extend ../../layout

block headerContent
	link(rel="stylesheet",href="/css/ife_find/jquery-confirm.css")
	link(rel="stylesheet",href="/css/ife_find/ife_nav.css")
	link(rel="stylesheet",href="/css/ife_find/ife_leftBody.css")
	link(rel="stylesheet",href="/css/ife_find/ife_sideBody.css")
	link(rel="stylesheet",href="/css/ife_find/ife_find.css")
	style.
		.ife_wrap{
			width:1000px;
			min-height:680px;
			margin:50px auto 0;
			padding:16px 0 0 0;
			font-size:0;
			background-color:rgba(231,116,3,0.15);
		}
		.ife_wrap .ife_rightBody{
			width:850px;
			min-height:680px;
			display:inline-block;
		}
		.ife_wrap .ife_rightBody .ife_rightMain{
			width:600px;
			min-height:680px;
			margin-right:10px;
			display:inline-block;
			vertical-align:top;
		}
		.ife_wrap .ife_rightBody .ife_sideMain{
			width:230px;
			min-height:680px;
			margin-right:10px;
			position:relative;
			display:inline-block;
		}

block content
	// 导航部分
	include ./ife_nav
	.ife_wrap
		.ife_leftNav
			.ife_leftBody#J_leftBody.ife_leftBodyActive
				ul
					li.active
						a.pull-left(href="/") 首页
						i.pull-right.ife_leftarrow
					li
						a.pull-left(href="/home/detail/#{userid}/a5df375d7c972248177e8b4407c8808c") 关注
						i.pull-right.ife_leftarrow
					li
						a.pull-left(href="/home/detail/#{userid}/1ed1645edd706dc379effe13f3edcacf") 粉丝
						i.pull-right.ife_leftarrow
					li
						a.pull-left(href="/home/detail/#{userid}/92a2b5cb9c6906035c2864fa225e1940") 个人主页
						i.pull-right.ife_leftarrow
		.ife_rightBody
			.ife_rightMain
				include ./ife_title
				include ./ife_userlist
				include ./ife_loading
			include ./ife_sideBody

block footerContent
	script(src="/js/ife_find/jquery-confirm.js")
	script(src="/js/ife_find/ife_find.js")
	script(src="/js/ife_find/ife_sideBody.js")